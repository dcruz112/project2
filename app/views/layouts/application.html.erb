<!DOCTYPE html>
<html>
<head>
  <title>Project 2</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div>
		<div>pNut</div>
	<% if current_user(false) %>
    <%= link_to image_tag("posts.png", :title => "User"), user_path(current_user), class: 'icon' %>
    <div id="user_info">Hello, <%= current_user.first_name %> <%= link_to "Logout", log_out_path %></div>
    <% if !current_user.student %>
      <% @lecture = Lecture.where(user_id: current_user.id).last %>
      <% if @lecture.nil? || !@lecture.current %>
        <%= link_to "Start Lecture", lectures_path, method: :post %>
      <% else %>
        <%= link_to "End Lecture", lecture_path(@lecture), method: :patch %>
      <% end %>
    <% end %>
  <% end %>
</div>
<%= yield %>

</body>
</html>
