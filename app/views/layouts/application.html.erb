<!DOCTYPE html>
<html>
<head>
  <title>Project 2</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user(false) %>
	<div class = "navbar navbar-fixed-top">
    <div class = "navbar-inner" >
      <div class = "container" >
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class = "logo" href="/lectures"><%= image_tag("pnut.png", size: "55x55") %> pNut</a>
            <ul class = "nav">
              <li class="dropdown">
                <a href="/lectures" class="dropdown-toggle" data-toggle="dropdown">Lectures
                <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li><a href="/lectures"><%= link_to Lecture.where(current:true).first.name + " (current)", lecture_path(Lecture.where(current: true).first) %></a></li>
                    <li><a href="/lectures">Past Lectures</a></li>
                  </ul>
              </li>
              <li><%= link_to "You", user_path(current_user) %></li>
              <li><%= link_to "Logout", log_out_path %></li>
            </ul>
      </div>
    </div>
  </div>
  <% end %>

<div class= "all-content">
<%= yield %>
</div>

</body>
</html>
