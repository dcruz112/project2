<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Points</th>
      <th>Content</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <% @current_vote = current_user.votes.where(:post_id => post.id) %>
        <% if @current_vote.present? %>
          <td id="upvote"><%= link_to "v", vote_path(@current_vote.first.id), method: :delete %></td>
        <% else %>
          <td id="upvote"><%= link_to "^", votes_path(vote: { post_id: post.id }), method: :post %></td>
        <% end %>
        <td id="net_val"><%= post.net_val %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
