<div class="all-posts">
	<% @posts = Post.all %>
	<% @posts.reverse.each do |p| %>
		<% @current_flags = current_user.flags.where(post_id: p) %>
		<%= render p unless @current_flags.present? %>
	<% end %>
</div>
<div class="form">
	<% @post = Post.new %>
	<%= render 'form' %>
</div>
<div class="button">
	<% if Lecture.last.current %>
		<%= link_to image_tag("button.png"), confusions_path, method: :post %>
	<% else %>
		"No lecture started"
	<% end %>
</div>