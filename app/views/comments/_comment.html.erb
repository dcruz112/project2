

<div class="comment">
	<div class="right-col">
		<div class="content"><%= comment.content %></div>
		<div class="footer">
			<% if current_user.id == comment.user_id %>
				<%= link_to 'Edit', edit_comment_path(comment) %>  
				<%= link_to 'Delete', comment, method: :delete,
				 data: { confirm: 'Are you sure?' } %>
			<% end %>
		</div>
	</div>
</div>