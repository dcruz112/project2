<% @current_vote = current_user.votes.where(comment_id: comment.id) %>

<div class="writing">
	<div class="left-col">
	  <div class="upvote">
	  	<% if @current_vote.present? %>
		  	<%= link_to image_tag("unvote.png"), unvote_post_path(comment), 
		  	method: :delete, remote: true, class: "icon" %>
		  <% else %>
			  <%= link_to image_tag("vote.png"), upvote_post_path(comment), method: :put, remote: true, class: "icon" %>
			<% end %>
	  </div>
		<div class="net_val"><%= comment.votes.length %></div>
	</div>
	<div class="right-col">
		<div class="content"><%= comment.content %></div>
		<div class="byline">
			<% if !comment.user.student %>
				<%= "Written by Professor #{comment.user.last_name}" %>
			<% elsif comment.name %>
				<%= "Written by #{comment.user.full_name}" %>
			<% else %>
				<%= "Written anonymously" %>
			<% end %>
		</div>
		<div class="footer">
			<% if current_user.id == comment.user_id %>
				<%= link_to image_tag("edit.png"), edit_comment_path(comment), class: 'icon' %>  
				<%= link_to image_tag("delete.png"), comment, method: :delete,
				 data: { confirm: 'Are you sure?' }, class: 'icon' %>
			<% elsif !current_user.student %>
				<%= link_to image_tag("delete.png"), post, method: :delete,
				 data: { confirm: 'Are you sure?' }, class: 'icon' %>
			<% else %>
			  <%= link_to image_tag("flag.png"), flags_path(flag: { comment_id: comment.id, 
			  	user_id: current_user.id }), method: :post, class: 'icon' %>
			<% end %>
		</div>
	</div>
</div>